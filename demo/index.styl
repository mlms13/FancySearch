.fs
  &-search
    &-input
      box-sizing border-box

  &-clear-input-button
    border 0
    background transparent
    color #999
    cursor pointer
    font-size 16px
    position absolute
    right 20px
    top 50%
    transform translateY(-50%)
    transition color 200ms

    &:hover
      color #444

    .fs-search-input-empty + &
      display none

  &-suggestion
    &-container
      background #fff
      border 1px solid #ddd
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)
      left 0
      position absolute
      right 0

      &-closed
        display none

      &-open
        display block

      &-empty
        &:before
          color #ccc
          content "No suggestions match your search"
          display block
          padding 5px 10px

    &-list
      box-sizing border-box
      list-style none
      margin 0
      padding 0

    &-item
      color #666
      padding 5px 10px

      &-highlighted
        background #eee
